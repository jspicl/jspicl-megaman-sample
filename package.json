{
  "name": "jspicl-megaman-sample",
  "version": "1.0.0",
  "repository": {
    "url": "https://github.com/jspicl/jspicl-megaman-sample"
  },
  "type": "module",
  "description": "A very simplistic MegaMan game build for PICO-8 and written in JavaScript",
  "scripts": {
    "restore-cart": "cross-env copyfiles game.p8 build",
    "prebuild": "yarn restore-cart -s",
    "build": "jspicl src/index.js build/game.p8 -c ./jspicl.config.js",
    "start": "yarn build --watch"
  },
  "author": "Agron Kabashi",
  "license": "MIT",
  "devDependencies": {
    "@jspicl/cli": "4.0.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.1.0"
  },
  "packageManager": "yarn@4.12.0"
}
